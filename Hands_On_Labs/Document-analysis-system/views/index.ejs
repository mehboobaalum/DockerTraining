<div class="dashboard">
  <h1>Paperless-AI Dashboard</h1>

  <div class="documents">
    <% if (documents && documents.length > 0) { %>
      <% documents.forEach(function(doc) { %>
        <div class="document">
          <h3><%= doc.title %></h3>
          <p><strong>Created at:</strong> <%= new Date(doc.created).toLocaleDateString('de-DE') %></p>
          <p><strong>Tags:</strong>
            <% if (doc.tags && doc.tags.length > 0) { %>
              <% doc.tags.forEach(function(tag) { %>
                <span class="tag"><%= tag %></span>
              <% }); %>
            <% } else { %>
              Keine Tags
            <% } %>
          </p>
          <p><strong>Correspondent:</strong> <%= doc.correspondent || 'Nicht zugewiesen' %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p>No documents found.</p>
    <% } %>
  </div>
</div>